---
interface Props {
  currentSlug?: string | null;
  seoDoc?: any | null;
  productFromSeo?: any | null;
  // fallback APIs (used only if seoDoc/productFromSeo not passed)
  seoApi?: string;
  contactHref?: string;
  phone?: string;
}

const {
  currentSlug = null,
  seoDoc = null,
  productFromSeo = null,
  // fallback API (used only if seoDoc not passed)
  seoApi = "https://test.amrita-fashions.com/api/seo/public",
  contactHref = "/contact",
  phone = "+91 99999 99999",
} = Astro.props as Props;

/* ================= Helpers ================= */

const norm = (v: any) => String(v ?? "").trim().toLowerCase();
const toId = (v: any) =>
  typeof v === "string"
    ? v.trim()
    : v && v._id
    ? String(v._id).trim()
    : "";

const safeNum = (v: any) => {
  const n = Number(String(v ?? "").replace(/[^0-9.\-]/g, "")); 
  return Number.isFinite(n) ? n : undefined;
};

const joinNames = (arr: any[]) =>
  Array.isArray(arr)
    ? arr
        .map((x: any) => x?.name ?? x)
        .filter(Boolean)
        .join(", ")
    : undefined;

const pickImg = (p: any) =>
  String(p?.img || p?.image1 || p?.image2 || "/images/placeholder-800x600.svg");

const currentSlugNorm = norm(currentSlug);

/* ================= Resolve SEO + product ================= */

let heroSeo: any = seoDoc ?? null;
let heroProduct: any = productFromSeo ?? null;

// Fallback: if not provided from parent, fetch from SEO API using slug
if (!heroSeo || !heroProduct) {
  try {
    const seoResponse = await fetch(seoApi, {
      headers: { Accept: "application/json" },
    });

    if (seoResponse.ok) {
      const seoData = await seoResponse.json();
      const seoRows = Array.isArray(seoData?.data)
        ? seoData.data
        : seoData?.data && typeof seoData.data === "object"
        ? [seoData.data]
        : Array.isArray(seoData)
        ? seoData
        : [];

      if (currentSlugNorm) {
        // For URL pattern: /:productSlug/in/...
        const actualSlug = currentSlugNorm.split("/in/")[0];

        // Find matching SEO entry
        heroSeo =
          seoRows.find((s: any) => {
            const productSlug = s?.product?.slug ? norm(s.product.slug) : "";
            const seoSlug = s?.slug ? norm(s.slug) : "";
            return productSlug === actualSlug || seoSlug === actualSlug;
          }) || null;

        // If we found SEO data, get the product from it
        if (heroSeo?.product) {
          heroProduct =
            typeof heroSeo.product === "object"
              ? heroSeo.product
              : { _id: heroSeo.product };
        }
      }
    }
  } catch (error) {
    console.error("Error fetching SEO data in ProductHero:", error);
  }
}

/* ================= View model ================= */

const titleText = String(
  heroSeo?.productlocationtitle || heroProduct?.name || "Premium Fabric"
).trim();

const tagline = String(
  heroSeo?.productlocationtagline || "Denim that Defines Durability and Style"
).trim();

const ratingValue = safeNum(heroSeo?.rating_value ?? heroProduct?.rating_value);
const ratingCount = safeNum(heroSeo?.rating_count ?? heroProduct?.rating_count);
const leadTimeDays = heroSeo?.leadtime ?? heroProduct?.leadtime;

const specs = {
  Content: heroProduct?.content?.name ?? heroProduct?.content,
  Weight: (() => {
    const gsm = safeNum(heroProduct?.gsm);
    const oz = safeNum(heroProduct?.oz);
    if (gsm !== undefined && oz !== undefined) return `${gsm} gsm / ${oz.toFixed(1)} oz`;
    if (gsm !== undefined) return `${gsm} gsm`;
    if (oz !== undefined) return `${oz.toFixed(1)} oz`;
    return undefined;
  })(),
  Width: (() => {
    const cm = safeNum(heroProduct?.cm);
    const inch = safeNum(heroProduct?.inch);
    if (cm !== undefined && inch !== undefined)
      return `${cm} cm / ${Math.round(inch)} inch`;
    if (cm !== undefined) return `${cm} cm`;
    if (inch !== undefined) return `${Math.round(inch)} inch`;
    return undefined;
  })(),
  Finish: heroProduct?.subfinish?.name ?? heroProduct?.subfinish,
  Design: heroProduct?.design?.name ?? heroProduct?.design,
  Motif: heroProduct?.motif?.name ?? heroProduct?.motif,
  Structure: heroProduct?.substructure?.name ?? heroProduct?.substructure,
  Colors: joinNames(heroProduct?.color) ?? heroProduct?.colors,
  "Lead time": leadTimeDays ? `${leadTimeDays} days` : undefined,
};

const heroImg = pickImg(heroProduct);
const heroAlt = String(heroProduct?.altimg1 || titleText);
---

<section class="product-hero">
  <div class="product-container">
    <!-- LEFT -->
    <div class="product-content">
      <div class="product-header">
        <div class="product-badge">Featured Product</div>
        <h1 class="product-title">{titleText}</h1>
        <p class="product-tagline">{tagline}</p>
      </div>

      {heroProduct ? (
        <div class="product-details">
          <!-- specs card -->
          <div class="specs-section">
            <div class="specs-card">
              <div class="specs-grid">
                {Object.entries(specs).map(
                  ([k, v]) =>
                    v && (
                      <div class="spec-row">
                        <span class="spec-name">{k}:</span>
                        <span class="spec-value">{v}</span>
                      </div>
                    )
                )}
              </div>

              {(ratingValue !== undefined || ratingCount !== undefined) && (
                <div class="card-meta">
                  <div class="meta">
                    <span class="meta-label">Rating:</span>
                    <span
                      class="stars"
                      aria-label={`${Math.round(ratingValue ?? 0)} out of 5 stars`}
                    >
                      {Array.from({ length: 5 }).map((_, i) => (
                        <svg
                          viewBox="0 0 20 20"
                          width="18"
                          height="18"
                          class={i < Math.round(ratingValue ?? 0) ? "star fill" : "star"}
                          aria-hidden="true"
                        >
                          <path
                            d="M10 1.5l2.6 5.3 5.8.8-4.2 4.1 1 5.8L10 14.5 4.8 17.5l1-5.8L1.5 7.6l5.8-.8L10 1.5z"
                          />
                        </svg>
                      ))}
                    </span>
                  </div>
                  {ratingCount !== undefined && (
                    <div class="meta">
                      <span class="meta-label">Reviews:</span>
                      <span class="meta-val">{ratingCount}</span>
                    </div>
                  )}
                </div>
              )}
            </div>
          </div>

          <!-- CTAs -->
          <div class="action-section">
            <div class="action-buttons">
              <a
                class="btn btn-primary"
                href={`${contactHref}?slug=${encodeURIComponent(
                  String(currentSlug || "")
                )}${
                  heroProduct
                    ? `&product=${encodeURIComponent(
                        heroProduct?.name || ""
                      )}&pid=${encodeURIComponent(heroProduct?._id || "")}`
                    : ""
                }`}
              >
                Get Quote Now
              </a>
              <a class="btn btn-secondary" href={`tel:${phone?.replace(/[^\d+]/g, "")}`}>
                Call Now
              </a>
              <a
                class="btn btn-outline"
                href={`/api/catalogue/${encodeURIComponent(
                  String(currentSlug || "catalog")
                )}`}
              >
                Download Catalog
              </a>
            </div>

            <ul class="trust-row">
              <li>
                <span class="dot" aria-hidden="true"></span>Fast Delivery
              </li>
              <li>
                <span class="dot" aria-hidden="true"></span>Quality Assured
              </li>
              <li>
                <span class="dot" aria-hidden="true"></span>Expert Support
              </li>
            </ul>
          </div>
        </div>
      ) : (
        <div class="empty-state">
          <h3>Product Not Found</h3>
          <p>No product found for this URL.</p>
        </div>
      )}
    </div>

    <!-- RIGHT -->
    <div class="product-visual">
      <div class="image-container">
        <figure class="image-card">
          <img
            src={heroImg}
            alt={heroAlt}
            loading="eager"
            decoding="async"
            class="product-image"
          />
          <figcaption class="image-badge">Premium Quality</figcaption>
        </figure>
      </div>
    </div>
  </div>
</section>

<style>
  :root {
    --brand: var(--tp-theme-primary, #2c4c97);
    --brand-2: var(--tp-theme-secondary, #163b7d);
    --ink: var(--tp-text-1, #0f2235);
    --ink-2: var(--tp-text-3, #475569);
    --bg: #fff;
    --muted: #e6ebf2;
    --chip: #0bb67a;
    --shadow: 0 12px 40px rgba(15, 34, 53, 0.12);
  }

  .product-hero {
    background: linear-gradient(180deg, #f7f9fc, #ffffff 40%);
    padding: clamp(0.75rem, 2vw, 1.5rem) 1rem 1.75rem;
  }
  .product-container {
    max-width: 77.5rem;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1.05fr 0.95fr;
    gap: clamp(1.5rem, 4vw, 3.5rem);
    align-items: start;
  }

  .product-header {
    margin-bottom: 0.75rem;
  }
  .product-badge {
    display: inline-block;
    padding: 0.5rem 0.875rem;
    border-radius: 999px;
    background: rgba(44, 76, 151, 0.08);
    border: 1px solid rgba(44, 76, 151, 0.18);
    color: var(--brand);
    font-weight: 700;
    font-size: 0.9rem;
    margin-bottom: 0.6rem;
  }
  .product-title {
    font-size: clamp(1.75rem, 5vw, 2.75rem);
    line-height: 1.15;
    letter-spacing: -0.02em;
    color: var(--ink);
    margin: 0 0 0.4rem;
    font-weight: 800;
  }
  .product-tagline {
    margin: 0 0 1rem;
    color: var(--ink-2);
    font-size: clamp(0.85rem, 1.8vw, 1rem);
  }

  .specs-card {
    background: #fff;
    border: 1px solid var(--muted);
    border-radius: 1.125rem;
    box-shadow: var(--shadow);
    padding: clamp(0.9rem, 2vw, 1.1rem);
  }
  .specs-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(10rem, 1fr));
    gap: 0.6rem 1.1rem;
  }
  .spec-row {
    display: flex;
    gap: 0.5rem;
    align-items: baseline;
    min-height: 1.75rem;
  }
  .spec-name {
    color: #526581;
    font-weight: 700;
    font-size: 0.8rem;
  }
  .spec-value {
    color: var(--ink);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .card-meta {
    display: flex;
    gap: 1.75rem;
    border-top: 1px dashed var(--muted);
    margin-top: 0.75rem;
    padding-top: 0.65rem;
  }
  .meta {
    display: flex;
    align-items: center;
    gap: 0.6rem;
  }
  .meta-label {
    color: #526581;
    font-weight: 700;
    font-size: 0.8rem;
  }
  .meta-val {
    color: var(--ink);
    font-weight: 700;
  }
  .stars {
    display: inline-flex;
    gap: 0.125rem;
  }
  .star {
    fill: none;
    stroke: #f59e0b;
    stroke-width: 1.2;
  }
  .star.fill {
    fill: #f59e0b;
  }

  .action-section {
    margin-top: 1rem;
  }
  .action-buttons {
    display: flex;
    gap: 0.9rem;
    flex-wrap: wrap;
    justify-content: center;
    text-align: center;
  }
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
    padding: 0.75rem 1.1rem;
    border-radius: 999px;
    font-weight: 700;
    font-size: 0.95rem;
    text-decoration: none;
    border: 1.5px solid transparent;
    transition:
      transform 0.18s ease,
      box-shadow 0.18s ease,
      background 0.18s ease,
      border-color 0.18s ease,
      color 0.18s ease;
  }
  .btn.btn-primary {
    background: #2c4c97;
    color: #fff;
    box-shadow: 0 0.5rem 1.5rem rgba(44, 76, 151, 0.2);
  }
  .btn.btn-primary:hover {
    transform: translateY(-0.15rem);
    box-shadow: 0 0.75rem 1.9rem rgba(44, 76, 151, 0.28);
    filter: brightness(1.05);
  }
  .btn.btn-secondary {
    background: #000;
    color: #fff;
    border-color: #000;
  }
  .btn.btn-secondary:hover {
    transform: translateY(-0.15rem);
    border-color: var(--brand);
    color: #fff;
    box-shadow: 0 0.5rem 1.5rem rgba(15, 34, 53, 0.18);
    background: #0f2235;
  }
  .btn.btn-outline {
    background: #006400c9;
    color: #fff;
    border-color: transparent;
  }
  .btn.btn-outline:hover {
    transform: translateY(-0.15rem);
    border-color: var(--brand);
    color: #fff;
    box-shadow: 0 0.5rem 1.5rem rgba(15, 34, 53, 0.18);
    background: #005000;
  }

  .trust-row {
    display: flex;
    gap: 1.1rem;
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
    margin: 0.9rem 0 0;
    color: var(--ink-2);
    font-weight: 700;
    font-size: 0.85rem;
    justify-content: center;
    text-align: center;
  }
  .trust-row .dot {
    width: 0.6rem;
    height: 0.6rem;
    border-radius: 50%;
    background: var(--chip);
    margin-right: 0.5rem;
    display: inline-block;
  }

  .product-visual {
    position: sticky;
    top: 4.5rem;
    align-self: start;
  }
  .image-card {
    margin: 0;
    width: 100%;
    max-width: clamp(22.5rem, 38vw, 32.5rem);
    aspect-ratio: 3 / 4;
    max-height: 72vh;
    background: linear-gradient(180deg, #ffffff, #f3f6fb);
    border: 1px solid var(--muted);
    border-radius: 1.75rem;
    box-shadow: 0 1.9rem 4.4rem rgba(22, 59, 125, 0.12);
    overflow: hidden;
    position: relative;
  }
  .product-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }
  .image-badge {
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    padding: 0.5rem 0.75rem;
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid var(--muted);
    border-radius: 0.75rem;
    font-weight: 700;
    color: #065f46;
    backdrop-filter: blur(0.5rem);
  }

  @media (max-width: 64rem) {
    .product-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .product-visual {
      position: relative;
      top: auto;
      display: flex;
      justify-content: center;
    }
    .image-card {
      max-width: 40rem;
      aspect-ratio: 16 / 10;
      max-height: 48vh;
    }
    .specs-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 40rem) {
    .specs-grid {
      grid-template-columns: 1fr;
    }
    .action-buttons {
      flex-direction: column;
      gap: 0.75rem;
    }
  }
</style>

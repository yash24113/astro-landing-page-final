---
// src/pages/market-area.astro

import LandingLayout from "../layouts/LandingLayout.astro";

const PAGE_TITLE = "Market Area ‚Äì Countries, States & Cities";
const PAGE_DESCRIPTION =
  "Browse all countries, states and cities where we serve fabric buyers and garment manufacturers.";
---

<LandingLayout title={PAGE_TITLE} description={PAGE_DESCRIPTION}>
  <main class="market-page">
    <!-- Header -->
    <div class="page-header">
      <div class="header-content">
        <h1 class="page-title">Market Area</h1>
        <p class="page-subtitle">Explore our presence across different regions and locations</p>
      </div>
    </div>

    <!-- Breadcrumb Navigation -->
    <div class="breadcrumb-container">
      <div class="breadcrumb" id="breadcrumb">
        <button class="breadcrumb-item active" data-level="countries">
          <span class="breadcrumb-icon">üåç</span>
          <span class="breadcrumb-text">All Countries</span>
        </button>
      </div>
    </div>

    <!-- Main Content -->
    <div class="main-container">
      <!-- Selection Summary -->
      <div class="selection-summary" id="selection-summary">
        <div class="summary-item">
          <span class="summary-label">Selected Country:</span>
          <span class="summary-value" id="selected-country-value">None</span>
        </div>
        <div class="summary-item">
          <span class="summary-label">Selected State:</span>
          <span class="summary-value" id="selected-state-value">None</span>
        </div>
        <div class="summary-item">
          <span class="summary-label">Selected City:</span>
          <span class="summary-value" id="selected-city-value">None</span>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="quick-actions" id="quick-actions">
        <button class="action-btn" id="clear-all-btn" disabled>
          <span class="action-icon">üóëÔ∏è</span>
          Clear All
        </button>
        <button class="action-btn" id="back-btn" disabled>
          <span class="action-icon">‚Ü©Ô∏è</span>
          Go Back
        </button>
      </div>

      <!-- Countries Section -->
      <section class="category-section" id="countries-section">
        <div class="section-header">
          <div class="header-icon">üåç</div>
          <div class="header-text">
            <h2>Countries</h2>
            <p>Select a country to explore its regions</p>
          </div>
          <div class="header-stats">
            <span class="count-badge" id="countries-count">0</span>
            <span class="stat-text">countries available</span>
          </div>
        </div>
        <div class="items-grid" id="country-list">
          <!-- JS will populate -->
        </div>
      </section>

      <!-- States Section -->
      <section class="category-section hidden" id="states-section">
        <div class="section-header">
          <div class="header-icon">üó∫Ô∏è</div>
          <div class="header-text">
            <h2 id="states-title">States</h2>
            <p id="states-subtitle">Select a state to view its cities</p>
          </div>
          <div class="header-stats">
            <span class="count-badge" id="states-count">0</span>
            <span class="stat-text">states available</span>
          </div>
        </div>
        <div class="items-grid" id="state-list">
          <!-- JS will populate -->
        </div>
      </section>

      <!-- Cities Section -->
      <section class="category-section hidden" id="cities-section">
        <div class="section-header">
          <div class="header-icon">üèôÔ∏è</div>
          <div class="header-text">
            <h2 id="cities-title">Cities</h2>
            <p id="cities-subtitle">Select a city to view its locations</p>
          </div>
          <div class="header-stats">
            <span class="count-badge" id="cities-count">0</span>
            <span class="stat-text">cities available</span>
          </div>
        </div>
        <div class="items-grid" id="city-list">
          <!-- JS will populate -->
        </div>
      </section>

      <!-- Locations Section -->
      <section class="category-section hidden" id="locations-section">
        <div class="section-header">
          <div class="header-icon">üìç</div>
          <div class="header-text">
            <h2 id="locations-title">Market Locations</h2>
            <p id="locations-subtitle">Available market areas and locations</p>
          </div>
          <div class="header-stats">
            <span class="count-badge" id="locations-count">0</span>
            <span class="stat-text">locations available</span>
          </div>
        </div>
        <div class="items-grid" id="location-list">
          <!-- JS will populate -->
        </div>
      </section>

      <!-- Loading State -->
      <div class="loading-section hidden" id="loading-section">
        <div class="loading-spinner"></div>
        <p>Loading locations...</p>
      </div>
    </div>

    <!-- Empty State -->
    <div class="empty-state global-hidden" id="global-empty-state">
      <div class="empty-icon">üîç</div>
      <h3>No locations found</h3>
      <p>Try selecting different regions or check back later for updates.</p>
      <button class="retry-btn" id="retry-btn">Refresh Data</button>
    </div>
  </main>

  <!-- ================== JS ================== -->
  <script type="module">
    const API = {
      countries: "https://test.amrita-fashions.com/api/countries",
      states: "https://test.amrita-fashions.com/api/states",
      cities: "https://test.amrita-fashions.com/api/cities",
      locations: "https://test.amrita-fashions.com/api/locations",
    };

    /* ---------- Helpers ---------- */
    const getId = (item) =>
      item?._id ?? item?.id ?? item?.slug ?? item?.code ?? null;

    const getName = (item) =>
      item?.name ??
      item?.title ??
      item?.cityName ??
      item?.stateName ??
      item?.countryName ??
      item?.locationName ??
      "Unnamed";

    const getCountryFromState = (state) => state?.country ?? null;
    const getStateFromCity = (city) => city?.state ?? null;
    const getCityFromLocation = (loc) => loc?.city ?? null;

    async function fetchJson(url) {
      try {
        const loadingSection = document.getElementById('loading-section');
        loadingSection.classList.remove('hidden');
        
        const res = await fetch(url, { headers: { Accept: "application/json" } });
        if (!res.ok) return [];
        const json = await res.json();

        loadingSection.classList.add('hidden');

        if (Array.isArray(json)) return json;

        const data = json?.data;
        if (data && typeof data === "object") {
          if (Array.isArray(data.countries)) return data.countries;
          if (Array.isArray(data.states)) return data.states;
          if (Array.isArray(data.cities)) return data.cities;
          if (Array.isArray(data.locations)) return data.locations;
          if (Array.isArray(data.items)) return data.items;
          for (const key of Object.keys(data)) {
            if (Array.isArray(data[key])) return data[key];
          }
        }

        if (json && typeof json === "object") {
          if (Array.isArray(json.data)) return json.data;
          if (Array.isArray(json.items)) return json.items;
          if (Array.isArray(json.countries)) return json.countries;
          if (Array.isArray(json.states)) return json.states;
          if (Array.isArray(json.cities)) return json.cities;
          if (Array.isArray(json.locations)) return json.locations;
          for (const key of Object.keys(json)) {
            if (Array.isArray(json[key])) return json[key];
          }
        }

        return [];
      } catch (err) {
        document.getElementById('loading-section').classList.add('hidden');
        console.error("Error fetching", url, err);
        return [];
      }
    }

    /* ---------- DOM Elements ---------- */
    const countryListEl = document.getElementById("country-list");
    const stateListEl = document.getElementById("state-list");
    const cityListEl = document.getElementById("city-list");
    const locationListEl = document.getElementById("location-list");

    const statesSection = document.getElementById("states-section");
    const citiesSection = document.getElementById("cities-section");
    const locationsSection = document.getElementById("locations-section");

    const statesTitle = document.getElementById("states-title");
    const statesSubtitle = document.getElementById("states-subtitle");
    const citiesTitle = document.getElementById("cities-title");
    const citiesSubtitle = document.getElementById("cities-subtitle");
    const locationsTitle = document.getElementById("locations-title");
    const locationsSubtitle = document.getElementById("locations-subtitle");

    const countriesCountEl = document.getElementById("countries-count");
    const statesCountEl = document.getElementById("states-count");
    const citiesCountEl = document.getElementById("cities-count");
    const locationsCountEl = document.getElementById("locations-count");

    const breadcrumbEl = document.getElementById("breadcrumb");
    const selectionSummaryEl = document.getElementById("selection-summary");
    const selectedCountryValue = document.getElementById("selected-country-value");
    const selectedStateValue = document.getElementById("selected-state-value");
    const selectedCityValue = document.getElementById("selected-city-value");
    const clearAllBtn = document.getElementById("clear-all-btn");
    const backBtn = document.getElementById("back-btn");
    const retryBtn = document.getElementById("retry-btn");
    const globalEmptyState = document.getElementById("global-empty-state");

    /* ---------- Data ---------- */
    let countries = [];
    let states = [];
    let cities = [];
    let locations = [];

    let selectedCountry = null;
    let selectedState = null;
    let selectedCity = null;
    let selectionHistory = [];

    function updateBreadcrumb() {
      breadcrumbEl.innerHTML = '';
      
      // Always show countries
      const countriesItem = createBreadcrumbItem('countries', 'üåç', 'All Countries', true);
      breadcrumbEl.appendChild(countriesItem);

      // Add selected country
      if (selectedCountry) {
        breadcrumbEl.appendChild(createBreadcrumbConnector());
        const countryItem = createBreadcrumbItem('states', 'üó∫Ô∏è', getName(selectedCountry), false);
        breadcrumbEl.appendChild(countryItem);
      }

      // Add selected state
      if (selectedState) {
        breadcrumbEl.appendChild(createBreadcrumbConnector());
        const stateItem = createBreadcrumbItem('cities', 'üèôÔ∏è', getName(selectedState), false);
        breadcrumbEl.appendChild(stateItem);
      }

      // Add selected city
      if (selectedCity) {
        breadcrumbEl.appendChild(createBreadcrumbConnector());
        const cityItem = createBreadcrumbItem('locations', 'üìç', getName(selectedCity), false);
        breadcrumbEl.appendChild(cityItem);
      }
    }

    function createBreadcrumbItem(level, icon, text, isActive) {
      const item = document.createElement('button');
      item.className = `breadcrumb-item ${isActive ? 'active' : ''}`;
      item.dataset.level = level;
      
      item.innerHTML = `
        <span class="breadcrumb-icon">${icon}</span>
        <span class="breadcrumb-text">${text}</span>
      `;
      
      if (!isActive) {
        item.addEventListener('click', () => handleBreadcrumbClick(level));
      }
      
      return item;
    }

    function createBreadcrumbConnector() {
      const connector = document.createElement('span');
      connector.className = 'breadcrumb-connector';
      connector.innerHTML = '‚Ä∫';
      return connector;
    }

    function handleBreadcrumbClick(level) {
      switch(level) {
        case 'countries':
          selectedCountry = null;
          selectedState = null;
          selectedCity = null;
          break;
        case 'states':
          selectedState = null;
          selectedCity = null;
          break;
        case 'cities':
          selectedCity = null;
          break;
      }
      rerender();
    }

    function updateSelectionSummary() {
      selectedCountryValue.textContent = selectedCountry ? getName(selectedCountry) : 'None';
      selectedStateValue.textContent = selectedState ? getName(selectedState) : 'None';
      selectedCityValue.textContent = selectedCity ? getName(selectedCity) : 'None';

      // Show/hide summary based on selections
      selectionSummaryEl.classList.toggle('has-selection', selectedCountry || selectedState || selectedCity);
    }

    function updateQuickActions() {
      const hasSelections = selectedCountry || selectedState || selectedCity;
      clearAllBtn.disabled = !hasSelections;
      
      const canGoBack = selectionHistory.length > 0;
      backBtn.disabled = !canGoBack;
    }

    function updateSectionVisibility() {
      statesSection.classList.toggle('hidden', !selectedCountry);
      citiesSection.classList.toggle('hidden', !selectedState);
      locationsSection.classList.toggle('hidden', !selectedCity);

      if (selectedCountry) {
        statesTitle.textContent = `States in ${getName(selectedCountry)}`;
        statesSubtitle.textContent = `Explore regions in ${getName(selectedCountry)}`;
      }
      if (selectedState) {
        citiesTitle.textContent = `Cities in ${getName(selectedState)}`;
        citiesSubtitle.textContent = `Discover cities in ${getName(selectedState)}`;
      }
      if (selectedCity) {
        locationsTitle.textContent = `Locations in ${getName(selectedCity)}`;
        locationsSubtitle.textContent = `Market areas in ${getName(selectedCity)}`;
      }
    }

    function updateCounts() {
      countriesCountEl.textContent = countries.length;
      
      if (selectedCountry) {
        const visibleStates = states.filter((s) => {
          const c = getCountryFromState(s);
          const cid = getId(c);
          return cid && getId(selectedCountry) && String(cid) === String(getId(selectedCountry));
        });
        statesCountEl.textContent = visibleStates.length;
      } else {
        statesCountEl.textContent = '0';
      }

      if (selectedState) {
        const visibleCities = cities.filter((c) => {
          const s = getStateFromCity(c);
          const sid = getId(s);
          return sid && getId(selectedState) && String(sid) === String(getId(selectedState));
        });
        citiesCountEl.textContent = visibleCities.length;
      } else {
        citiesCountEl.textContent = '0';
      }

      if (selectedCity) {
        const visibleLocations = locations.filter((loc) => {
          const c = getCityFromLocation(loc);
          const cid = getId(c);
          return cid && getId(selectedCity) && String(cid) === String(getId(selectedCity));
        });
        locationsCountEl.textContent = visibleLocations.length;
        
        // Show global empty state if no locations found
        globalEmptyState.classList.toggle('global-hidden', visibleLocations.length > 0);
      } else {
        locationsCountEl.textContent = '0';
        globalEmptyState.classList.add('global-hidden');
      }
    }

    function createItemElement(item, isActive, onClick, level) {
      const itemEl = document.createElement('div');
      itemEl.className = `location-item ${isActive ? 'active' : ''}`;
      itemEl.dataset.level = level;
      
      const textEl = document.createElement('span');
      textEl.className = 'item-text';
      textEl.textContent = getName(item);
      
      const arrowEl = document.createElement('span');
      arrowEl.className = 'item-arrow';
      arrowEl.innerHTML = '‚Üí';
      
      itemEl.appendChild(textEl);
      if (level !== 'locations') {
        itemEl.appendChild(arrowEl);
      }
      
      if (onClick) {
        itemEl.style.cursor = 'pointer';
        itemEl.addEventListener('click', () => {
          // Add to history before making new selection
          selectionHistory.push({
            country: selectedCountry,
            state: selectedState,
            city: selectedCity
          });
          onClick(item);
        });
        
        itemEl.addEventListener('mouseenter', () => {
          if (!isActive) {
            itemEl.classList.add('hover');
          }
        });
        
        itemEl.addEventListener('mouseleave', () => {
          itemEl.classList.remove('hover');
        });
      }
      
      return itemEl;
    }

    function renderItems(container, items, activeItem, onClick, level) {
      if (!container) return;
      
      container.innerHTML = '';
      
      if (!items || items.length === 0) {
        const emptyEl = document.createElement('div');
        emptyEl.className = 'empty-state';
        emptyEl.innerHTML = `
          <div class="empty-icon">üì≠</div>
          <div class="empty-text">No ${level} available</div>
        `;
        container.appendChild(emptyEl);
        return;
      }
      
      const activeId = activeItem ? getId(activeItem) : null;
      
      items.forEach(item => {
        const isActive = activeId && getId(item) && String(getId(item)) === String(activeId);
        const itemEl = createItemElement(item, isActive, onClick, level);
        container.appendChild(itemEl);
      });
    }

    function rerender() {
      updateBreadcrumb();
      updateSelectionSummary();
      updateQuickActions();
      updateSectionVisibility();
      updateCounts();

      renderItems(countryListEl, countries, selectedCountry, handleCountryClick, 'countries');

      if (selectedCountry) {
        const visibleStates = states.filter((s) => {
          const c = getCountryFromState(s);
          const cid = getId(c);
          return cid && getId(selectedCountry) && String(cid) === String(getId(selectedCountry));
        });
        renderItems(stateListEl, visibleStates, selectedState, handleStateClick, 'states');
      }

      if (selectedState) {
        const visibleCities = cities.filter((c) => {
          const s = getStateFromCity(c);
          const sid = getId(s);
          return sid && getId(selectedState) && String(sid) === String(getId(selectedState));
        });
        renderItems(cityListEl, visibleCities, selectedCity, handleCityClick, 'cities');
      }

      if (selectedCity) {
        const visibleLocations = locations.filter((loc) => {
          const c = getCityFromLocation(loc);
          const cid = getId(c);
          return cid && getId(selectedCity) && String(cid) === String(getId(selectedCity));
        });
        renderItems(locationListEl, visibleLocations, null, null, 'locations');
      }
    }

    function handleCountryClick(country) {
      selectedCountry = country;
      selectedState = null;
      selectedCity = null;
      rerender();
    }

    function handleStateClick(state) {
      selectedState = state;
      selectedCity = null;
      rerender();
    }

    function handleCityClick(city) {
      selectedCity = city;
      rerender();
    }

    // Event Listeners for buttons
    clearAllBtn.addEventListener('click', () => {
      selectedCountry = null;
      selectedState = null;
      selectedCity = null;
      selectionHistory = [];
      rerender();
    });

    backBtn.addEventListener('click', () => {
      if (selectionHistory.length > 0) {
        const previousState = selectionHistory.pop();
        selectedCountry = previousState.country;
        selectedState = previousState.state;
        selectedCity = previousState.city;
        rerender();
      }
    });

    retryBtn.addEventListener('click', initMarketPage);

    async function initMarketPage() {
      try {
        const [countriesData, statesData, citiesData, locationsData] = await Promise.all([
          fetchJson(API.countries),
          fetchJson(API.states),
          fetchJson(API.cities),
          fetchJson(API.locations),
        ]);

        countries = countriesData || [];
        states = statesData || [];
        cities = citiesData || [];
        locations = locationsData || [];

        rerender();
      } catch (error) {
        console.error('Error initializing market page:', error);
      }
    }

    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", initMarketPage);
    } else {
      initMarketPage();
    }
  </script>

  <!-- ================== Enhanced User-Friendly Styles ================== -->
  <style>
    :root {
      --primary: #3b82f6;
      --primary-dark: #2563eb;
      --primary-light: #dbeafe;
      --primary-lighter: #eff6ff;
      --secondary: #8b5cf6;
      --background: #f8fafc;
      --surface: #ffffff;
      --text-primary: #1f2937;
      --text-secondary: #6b7280;
      --text-muted: #9ca3af;
      --border: #e5e7eb;
      --border-light: #f3f4f6;
      --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
      --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      --radius: 12px;
      --radius-lg: 16px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      line-height: 1.5;
    }

    .market-page {
      min-height: 100vh;
      background: var(--background);
    }

    /* Header */
    .page-header {
      background: linear-gradient(135deg, var(--surface) 0%, var(--background) 100%);
      border-bottom: 1px solid var(--border);
      padding: 2.5rem 2rem;
    }

    .header-content {
      max-width: 1200px;
      margin: 0 auto;
      text-align: center;
    }

    .page-title {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
      background: linear-gradient(135deg, var(--text-primary) 0%, var(--primary) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .page-subtitle {
      font-size: 1.125rem;
      color: var(--text-secondary);
      font-weight: 400;
    }

    /* Breadcrumb */
    .breadcrumb-container {
      background: var(--surface);
      border-bottom: 1px solid var(--border);
      padding: 1rem 2rem;
    }

    .breadcrumb {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .breadcrumb-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      background: var(--background);
      border: 1px solid var(--border);
      border-radius: 20px;
      font-size: 0.9rem;
      color: var(--text-secondary);
      transition: all 0.2s ease;
      cursor: pointer;
      border: none;
    }

    .breadcrumb-item:not(.active):hover {
      background: var(--primary-light);
      color: var(--primary-dark);
      transform: translateY(-1px);
    }

    .breadcrumb-item.active {
      background: var(--primary);
      color: white;
    }

    .breadcrumb-connector {
      color: var(--text-muted);
      font-weight: 600;
    }

    .breadcrumb-icon {
      font-size: 1rem;
    }

    /* Main Container */
    .main-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    /* Selection Summary */
    .selection-summary {
      background: var(--primary-lighter);
      border: 1px solid var(--primary-light);
      border-radius: var(--radius);
      padding: 1.5rem;
      display: none;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .selection-summary.has-selection {
      display: flex;
      animation: slideDown 0.3s ease;
    }

    .summary-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      background: white;
      border-radius: 8px;
      border: 1px solid var(--primary-light);
    }

    .summary-label {
      font-size: 0.875rem;
      color: var(--text-secondary);
      font-weight: 500;
    }

    .summary-value {
      font-size: 0.875rem;
      color: var(--primary-dark);
      font-weight: 600;
    }

    /* Quick Actions */
    .quick-actions {
      display: flex;
      gap: 1rem;
      justify-content: flex-end;
    }

    .action-btn {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: 8px;
      color: var(--text-secondary);
      font-size: 0.9rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .action-btn:hover:not(:disabled) {
      background: var(--primary-light);
      color: var(--primary-dark);
      border-color: var(--primary);
      transform: translateY(-1px);
    }

    .action-btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      transform: none;
    }

    .action-icon {
      font-size: 1rem;
    }

    /* Category Sections */
    .category-section {
      background: var(--surface);
      border-radius: var(--radius-lg);
      border: 1px solid var(--border);
      overflow: hidden;
      transition: all 0.3s ease;
    }

    .category-section:hover {
      box-shadow: var(--shadow-md);
    }

    .category-section.hidden {
      display: none;
    }

    /* Section Header */
    .section-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1.5rem 2rem;
      background: linear-gradient(135deg, var(--surface) 0%, var(--border-light) 100%);
      border-bottom: 1px solid var(--border);
    }

    .header-icon {
